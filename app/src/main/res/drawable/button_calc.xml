<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- BUTTON -->
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
                    <padding
                        android:left="0dp"
                        android:top="0dp"
                        android:right="0dp"
                        android:bottom="0dp"
                        />
                    <solid
                        android:color="#27FFFFFF"
                        />
                    <corners
                        android:radius="360dp"
                        />
                    <size
                        android:width="64dp"
                        android:height="64dp"
                        />
                    <stroke
                        android:width="1dp"
                        android:color="#4DFFFFFF"
                        />
                </shape>
            </item>
            <!-- SHADOW
            <item android:top="10dp">
                <shape>
                    <solid android:color="#19000000"
                        />
                    <corners
                        android:radius="20dp"
                        />
                </shape>
            </item>
            -->
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW
            <item>
                <shape>
                    <solid
                        android:color="#36000000"
                        />
                    <corners
                        android:radius="20dp"
                        />
                </shape>
            </item>
            -->
            <!-- BUTTON -->
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
                    <padding
                        android:left="0dp"
                        android:top="0dp"
                        android:right="0dp"
                        android:bottom="0dp"
                        />
                    <solid
                        android:color="#4DFFFFFF"
                        />
                    <corners
                        android:radius="360dp"
                        />
                    <size
                        android:width="64dp"
                        android:height="64dp"
                        />
                    <stroke
                        android:width="1dp"
                        android:color="#9AFFFFFF"
                        />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>